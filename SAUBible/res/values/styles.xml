<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
 
    <!-- Action Bar Item Styles  -->
	<style name="ActionBarTitleButton" parent="AppBaseTheme">
		<item name="android:background">@drawable/actionbar_title_button</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:textColor">@color/TextColor</item>
    </style>
	
	<style name="ActionBarTitleButtonSpinner" parent="@style/SpinnerOrangeBible">
	    <!-- Emulates spinner style while still being a button -->
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:textColor">@color/TextColor</item>
    </style>
	

    <!-- Drawer Theme -->
    <style name="DrawerTheme" parent="AppBaseTheme">
		<item name="android:background">@color/Base</item>
		<item name="android:textColor">@color/TextColor</item>
		<item name="android:textColorHint">@color/TextColorHint</item>
    </style>
    
    <style name="DrawerTextColor" parent="AppBaseTheme">
		<item name="android:textColor">@color/TextColor</item>
		<item name="android:textColorHint">@color/TextColorHint</item>
    </style>
    
    <style name="SearchTextColor" parent="AppBaseTheme">
		<item name="android:textColorHint">@color/TextColorHint</item>
    </style>
    
    <style name="DrawerHeading" parent="DrawerTextColor">
		<item name="android:textSize">28sp</item>
		<item name="android:background">@color/Highlight</item>
		<item name="android:height">45dp</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingLeft">6dp</item>
		<item name="android:paddingBottom">2dp</item>
    </style>
   		
    <style name="DrawerItem" parent="AppBaseTheme">
		<item name="android:background">@drawable/drawer_item</item>
    </style>
    
    <style name="DrawerItemText" parent="DrawerTextColor">
		<item name="android:textSize">18sp</item>
		<item name="android:padding">6dp</item>
    </style>
    
    
    <!-- General UI Styles -->
    <style name="AppButton" parent="ButtonOrangeBible">
		<item name="android:textColor">@color/TextColor</item>
		<item name="android:layout_marginTop">50dp</item>
    </style>
    
    <style name="LayoutPadding" parent="AppBaseTheme">
        <item name="android:paddingTop">@dimen/layout_padding_topbottom</item>
        <item name="android:paddingBottom">@dimen/layout_padding_topbottom</item>
        <item name="android:paddingLeft">@dimen/layout_padding_leftright</item>
        <item name="android:paddingRight">@dimen/layout_padding_leftright</item>
        
    </style>
    
    
    <!-- Home & Daily Verse -->
    <style name="DailyVerseBackground" parent="AppBaseTheme">
        <item name="android:layout_height">180dp</item>
    </style>
    
    <style name="DailyVerseHeader" parent="AppBaseTheme">
        <item name="android:gravity">top|left</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="DailyVerseText" parent="AppBaseTheme">
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    
    <!-- Search -->
	<style name="SearchResultsCounter" parent="AppBaseTheme">
	    <item name="android:background">@drawable/search_counter</item>
	    <item name="android:layout_marginTop">8dp</item>
	    <item name="android:paddingTop">3dp</item>
	    <item name="android:paddingBottom">3dp</item>
	    <item name="android:paddingLeft">10dp</item>
	    <item name="android:paddingRight">10dp</item>
		<item name="android:textColor">@color/TextColor</item>
    </style>
    
	<style name="SearchResultsDisplay" parent="AppBaseTheme">
	    <item name="android:background">@drawable/search_display</item>
	    <item name="android:paddingTop">3dp</item>
	    <item name="android:paddingBottom">2dp</item>
	</style>
    
	<style name="NoPaddingButton" parent="AppButton">
		<item name="android:padding">0dp</item>
    </style>
    
    
</resources>