<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Home & Daily Verse -->
    <style name="DailyVerseBackground" parent="AppBaseTheme">
        <item name="android:layout_height">240dp</item>
    </style>
    
    <style name="DailyVerseHeader" parent="AppBaseTheme">
        <item name="android:gravity">top|left</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="DailyVerseText" parent="AppBaseTheme">
        <item name="android:layout_margin">50dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">22sp</item>
    </style>
    
</resources>