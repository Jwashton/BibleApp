<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.southern"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:name="edu.southern.BibleApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/OrangeBible" > <!-- This app uses a generated theme. See res/values/orangebible_styles.xml for details -->
        <activity
            android:name="edu.southern.HomeScreen"
            android:label="@string/app_name"
            android:theme="@style/BibleTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.southern.ChapterSelection"
            android:label="@string/title_activity_chapter_selection" >
        </activity>
        <activity
            android:name="edu.southern.VerseSelection"
            android:label="@string/title_activity_verse_selection" >
        </activity>
        <activity
            android:name="edu.southern.BibleReader"
            android:label="@string/title_activity_bible_reader" >
        </activity>
    </application>

</manifest>